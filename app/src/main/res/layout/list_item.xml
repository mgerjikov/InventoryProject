<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parent_linear_layout_list_item">

    <LinearLayout
        style="@style/child_linear_layout_list_item"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/product_image"
            style="@style/image_view_list_item"
            tools:src="@drawable/attachment"
            />


        <LinearLayout
            style="@style/child_linear_layout_list_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_name"
                style="@style/text_views_list_item"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Product Name" />

            <TextView
                android:id="@+id/text_view_price"
                style="@style/text_views_list_item"
                android:textStyle="italic"
                tools:text="Product Price" />

            <TextView
                android:id="@+id/text_view_quantity"
                style="@style/text_views_list_item"
                android:textStyle="italic"
                tools:text="Product Quantity" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout style="@style/relative_layout_list_item">

        <Button
            android:id="@+id/button_sale"
            style="@style/sale_button_list_item" />


    </RelativeLayout>

</LinearLayout>