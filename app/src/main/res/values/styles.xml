<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- _____________________________  ACTIVITY_MAIN.XML  _____________________________ -->

    <!-- Custom style for parent RelativeLayout in activity_main.xml -->
    <style name="relative_layout_activity_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- Custom style for LinearLayout in activity_main.xml -->
    <style name="linear_layout_activity_main">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <!-- Custom style for ImageView in activity_detail.xml -->
    <style name="image_view_activity_main">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/emptystate</item>
    </style>
    <!-- Custom style for ListView in activity_detail.xml -->
    <style name="list_view_activity_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!-- _____________________________ ACTIVITY_DETAIL.XML _____________________________ -->

    <!-- Custom style for parent LinearLayout in activity_detail.xml -->
    <style name="parent_linear_layout_activity_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/padding_of_sixteen_d_p</item>
    </style>
    <!-- Custom style for children's LinearLayout in activity_detail.xml -->
    <style name="child_linear_layout_activity_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_or_width_of_fifty_d_p</item>
        <item name="android:layout_margin">@dimen/margin_or_padding_four_d_p</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!-- Custom style for the LinearLayout for the image in activity_detail.xml -->
    <style name="image_linear_layout_activity_detail">
        <item name="android:layout_width">@dimen/height_or_width_of_two_hundred_d_p</item>
        <item name="android:layout_height">@dimen/height_or_width_of_two_hundred_d_p</item>
        <item name="android:layout_margin">@dimen/margin_or_padding_four_d_p</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- Custom style for the information TextView's in activity_detail.xml -->
    <style name="info_text_views_activity_detail">
        <item name="android:layout_width">@dimen/layout_width_of_zero_d_p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_of_sixteen_s_p</item>
    </style>
    <!-- Custom style for the TextView's that represent value in activity_detail.xml -->
    <style name="value_text_view_activity_detail">
        <item name="android:layout_width">@dimen/layout_width_of_zero_d_p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/size_of_fourteen_s_p</item>
    </style>
    <!-- Custom style for the Buttons's that manipulate values in activity_detail.xml -->
    <style name="value_buttons_activity_detail">
        <item name="android:layout_width">@dimen/height_or_width_of_fifty_d_p</item>
        <item name="android:layout_height">@dimen/height_or_width_of_fifty_d_p</item>
    </style>
    <!-- Custom style for the browsing image Button in activity_detail.xml -->
    <style name="browse_image_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <!-- Custom style for the ordering from supplier Button in activity_detail.xml -->
    <style name="order_button">
        <item name="android:layout_width">@dimen/height_or_width_of_two_hundred_d_p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- Custom style for the ImageView in activity_detail.xml -->
    <style name="image_view_activity_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:src">@drawable/attachment</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- Custom style for the EditText's in activity_detail.xml -->
    <style name="edit_texts_activity_detail">
        <item name="android:layout_width">@dimen/layout_width_of_zero_d_p</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_of_fourteen_s_p</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- _____________________________ LIST_ITEM.XML _____________________________ -->
    <!-- Custom style for the parent LinearLayout in list_item.xml -->
    <style name="parent_linear_layout_list_item">
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding_of_sixteen_d_p</item>
    </style>
    <!-- Custom style for the child's LinearLayout in list_item.xml -->
    <style name="child_linear_layout_list_item">
        <item name="android:layout_width">@dimen/layout_width_of_zero_d_p</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- Custom style for the child RelativeLayout in list_item.xml -->
    <style name="relative_layout_list_item">
        <item name="android:layout_width">@dimen/layout_width_of_zero_d_p</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.3</item>
    </style>
    <!-- Custom style for the ImageView in list_item.xml -->
    <style name="image_view_list_item">
        <item name="android:layout_width">@dimen/height_or_width_of_hundred_d_p</item>
        <item name="android:layout_height">@dimen/height_or_width_of_hundred_d_p</item>
        <item name="android:padding">@dimen/margin_or_padding_four_d_p</item>
    </style>
    <!-- Custom style for the TextView's in list_item.xml -->
    <style name="text_views_list_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_or_padding_four_d_p</item>
    </style>
    <!-- Custom style for the sale Button in list_item.xml -->
    <style name="sale_button_list_item">
        <item name="android:layout_width">@dimen/height_or_width_of_hundred_d_p</item>
        <item name="android:layout_height">@dimen/height_or_width_of_fifty_d_p</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:focusable">false</item>
        <item name="android:text">@string/button_sale</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
